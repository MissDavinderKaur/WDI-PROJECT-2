<h1>Edit User</h1>
<form action="/users/<%= user._id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <div class="form-group">
    <label for="user_name">Name</label>
    <input type="text" class="form-control" id="user_name" placeholder="Name" name="user[name]" value="<%= user.name %>">
  </div>
  <div class="form-group">
    <label for="user_description">Email</label>
    <input type="text" class="form-control" id="user_name" placeholder="Email" name="user[email]" value="<%= user.email %>">
  </div>
  <div class="form-group">
    <label for="user_description">Phone</label>
    <input type="text" class="form-control" id="user_name" placeholder="Phone" name="user[phone]" value="<%= user.phone %>">
  </div>

  <input type="submit" value="Submit" class="btn btn-primary">
</form>
